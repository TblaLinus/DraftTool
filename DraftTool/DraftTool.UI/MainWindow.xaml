<Window x:Class="DraftTool.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DraftTool.UI"
        xmlns:viewModel="clr-namespace:DraftTool.UI.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Command="{Binding ExitApplicationCommand}"
                VerticalContentAlignment="Center" Margin="2"
                Content="EXIT" FontSize="16"/>
    </Grid>
</Window>
